<h1>Inspirational Greeting Cards</h1>

<%= form_with url: root_path, method: :get do |form| %>
  <%= form.label :collection_id, 'Pexels Collection ID:' %>
  <%= form.text_field :collection_id %>
  <%= form.submit "Show photos" %>
<% end %>

<% if @photos %>
  <div>
    <% @photos.each do |photo| %>
      <div>

        <img src="<%= photo.src['medium'] %>" alt="Photo from Pexels by <%= photo.user.name %>">
      </div>
    <% end %>

  </div>
<% end %>

<a href="https://www.pexels.com">Photos provided by Pexels</a>
